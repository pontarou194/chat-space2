.message
  .message-content
    .upper-message
      .upper-message__user-name
        = message.user.name
      .upper-message__date
        - if message.content.present?
          = message.created_at.strftime("%Y/%m/%d %H:%M")
          
    .lower-message
      - if message.content.present?
        %p.lower-message__content
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.url.present?